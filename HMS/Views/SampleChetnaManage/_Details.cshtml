@model HMS.Models.SampleChetnaManageVM.SampleChetnaManageCURDViewModel

<div class="row">
    <div class="col-md-12">
        <table class="CustomBlueTable">
            <tr><th>Id</th><td>@Model.Id</td></tr>
           
            <tr>
                <th>Profile Picture</th>
                <td>
                    @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                    { 
                        <img src="@Url.Content(Model.ProfilePicture)" alt="Profile Picture" class="img-fluid" style="max-width: 200px;" />
                    }
                    else
                    {
                        <!-- Placeholder image -->
                        <img src="~/images/UserIcon/Admin.png" alt="No Image" class="img-fluid" style="max-width: 200px;" />
                    }
                </td>
            </tr>
         
            <tr><th>Name</th><td>@Model.Title</td></tr>
            <tr><th>Description</th><td>@Model.Description</td></tr>
            <tr><th>DateOfBirth</th><td>@Model.DateOfBirth</td></tr>
            <tr><th>CreatedDate</th><td>@Model.CreatedDate</td></tr>
            <tr><th>ModifiedDate</th><td>@Model.ModifiedDate</td></tr>
            <tr><th>CreatedBy</th><td>@Model.CreatedBy</td></tr>
            <tr><th>ModifiedBy</th><td>@Model.ModifiedBy</td></tr>
        </table>
    </div>
</div>