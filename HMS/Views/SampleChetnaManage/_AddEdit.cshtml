@model HMS.Models.SampleChetnaManageVM.SampleChetnaManageCURDViewModel

@{
    ViewData["Title"] = "Create";
}

<div>
    <div class="row">
        <div class="col-md-12">
            <form id="frmSampleChetnaManage">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="CreatedBy" />

                <div class="form-group row">
                    <label asp-for="Title" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                     
                        <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="DateOfBirth" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        @{
                            // Store the date in a variable
                            string dateToDisplay;

                            if (Model.Id > 0 && Model.DateOfBirth != null)
                            {
                                // For existing entries in edit mode, display the existing date
                                dateToDisplay = Model.DateOfBirth.Value.ToString("yyyy-MM-dd");
                            }
                            else
                            {
                                // For new entries, display the current date
                                dateToDisplay = DateTime.Now.ToString("yyyy-MM-dd");
                            }
                        }
                        <input asp-for="DateOfBirth" class="form-control" type="date" value="@dateToDisplay" />

                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group row">
                    <label asp-for="ProfilePicture" class="col-sm-2 col-form-label"></label>
                   
                   
                    <div class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                        {
                            <img src="@Url.Content(Model.ProfilePicture)" alt="Profile Picture" class="img-fluid" style="max-width: 200px;" />
                        }
                        else
                        {
                            <p>No image available</p>
                        }
                        <input type="file" id="ProfilePictureDetails" name="ProfilePictureDetails" accept="image/*" onchange="validateImageFile(this)">
                        <span class="text-danger" id="profilePictureError"></span>
                        <p>&nbsp;</p>
                        <input type="hidden" asp-for="ImageId" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="button" id="btnSave" value="Save" onclick="Save()" class="btn btn-info">
                        <button type="button" id="btnClose" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>
                </div>

                <hr />
                <h2>Select Role</h2>
                <partial name="_ManageRole" />
            </form>
        </div>
    </div>
</div>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
